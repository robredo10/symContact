{% extends 'base.html.twig' %}

{% block title %}Titi index{% endblock %}

{% block body %}
    <h1>Titi index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Test</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for titi in titis %}
            <tr>
                <td>{{ titi.id }}</td>
                <td>{{ titi.test }}</td>
                <td>
                    <a href="{{ path('titi_show', {'id': titi.id}) }}">show</a>
                    <a href="{{ path('titi_edit', {'id': titi.id}) }}">edit</a>
                </td>
            </tr>
